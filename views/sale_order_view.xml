<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Las vistas de di√°logo han sido eliminadas - funcionalidad integrada en el tab principal -->

    <!-- Las vistas de formulario para modelos personalizados se generan autom√°ticamente -->

    <!-- Herencia de la vista de formulario de Sale Order -->
    <record id="view_order_form_inherit_chapters" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.chapters</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campo descripci√≥n debajo del cliente -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="order_description" placeholder="Descripci√≥n adicional del presupuesto..."/>
            </xpath>
            
            <!-- Agregar bot√≥n de cargar plantilla antes del campo order_line -->
            <xpath expr="//field[@name='order_line']" position="before">
                <div class="row mb-3">
                    <div class="col-12">
                        <button name="action_load_template_to_order_lines" 
                                string="Cargar Plantilla" 
                                type="object" 
                                class="btn-success me-2"
                                icon="fa-download"
                                help="Seleccionar y cargar una plantilla directamente en las l√≠neas del pedido"
                                groups="sales_team.group_sale_salesman"/>
                        <button name="action_toggle_all_sections_collapse" 
                                string="Expandir/Contraer Todo" 
                                type="object" 
                                class="btn-info me-2"
                                icon="fa-expand"
                                help="Expandir o contraer todas las secciones"/>
                    </div>
                </div>
            </xpath>
            
            <!-- Configurar contexto del campo order_line -->
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_order_id': id, 'show_chapters': True}</attribute>
            </xpath>
            
            <!-- Configurar vista tree personalizada para colapso -->
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{'tree_view_ref': 'SermacoV1.view_order_line_tree_collapse'}</attribute>
            </xpath>
            

            
            <!-- Agregar contenedor para funcionalidad de colapso -->
            <xpath expr="//field[@name='order_line']" position="after">
                <div class="section-collapse-controls">
                    <!-- Los estilos CSS y JavaScript se cargan desde archivos separados -->
                    <div class="alert alert-info" style="margin-top: 10px;">
                        <i class="fa fa-info-circle"></i>
                        <strong>Funcionalidad de Secciones:</strong>
                        Utiliza los botones "Expandir/Contraer Todo" para gestionar la visibilidad de las secciones.
                        Cada secci√≥n individual puede expandirse/contraerse haciendo clic en su icono.
                    </div>
                </div>
            </xpath>
            

        </field>
    </record>

    <!-- Vista tree personalizada para order_line con funcionalidad de colapso -->
    <record id="view_order_line_tree_collapse" model="ir.ui.view">
        <field name="name">sale.order.line.tree.collapse</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-bf="display_type == 'line_section'" 
                  decoration-info="display_type == 'line_section' and is_fixed">
                <field name="display_type" invisible="1"/>
                <field name="is_fixed" invisible="1"/>
                <field name="line_type" invisible="1"/>
                <field name="is_section_collapsed" invisible="1"/>
                <field name="section_key" invisible="1"/>
                <field name="source_chapter_id" invisible="1"/>
                
                <!-- Bot√≥n de colapso solo para secciones fijas -->
                <button name="action_toggle_section_collapse" type="object" 
                        string="‚èµ" class="btn-link text-primary" 
                        invisible="not (display_type == 'line_section' and is_fixed and line_type in ('alquiler', 'montaje'))"
                        help="Hacer clic para colapsar/expandir esta secci√≥n"/>
                        
                <!-- Bot√≥n de colapso para cap√≠tulos -->
                <button name="action_toggle_chapter_collapse" type="object" 
                        string="‚èµ" class="btn-link text-success" 
                        invisible="not (display_type == 'line_section' and line_type == 'otros' and 'üîπ' in (name or ''))"
                        help="Hacer clic para colapsar/expandir este cap√≠tulo"/>
                
                <field name="product_id" 
                       invisible="display_type in ('line_section', 'line_note') or is_section_collapsed"
                       required="not display_type and not is_fixed"/>
                       
                <field name="name" 
                       invisible="is_section_collapsed and not (display_type == 'line_section')"/>
                       
                <field name="product_uom_qty" 
                       invisible="display_type in ('line_section', 'line_note') or is_section_collapsed"/>
                       
                <field name="product_uom" 
                       invisible="display_type in ('line_section', 'line_note') or is_section_collapsed"/>
                       
                <field name="price_unit" 
                       invisible="display_type in ('line_section', 'line_note') or is_section_collapsed"/>
                       
                <field name="tax_ids" widget="many2many_tags" 
                       invisible="display_type in ('line_section', 'line_note') or is_section_collapsed"/>
                       
                <field name="price_subtotal" 
                       invisible="display_type in ('line_section', 'line_note') or is_section_collapsed"/>
            </tree>
        </field>
    </record>

    
    <!-- Vistas para Plantillas de Cap√≠tulos -->
    <record id="view_chapter_template_list" model="ir.ui.view">
        <field name="name">sale.order.chapter.template.list</field>
        <field name="model">sale.order.chapter.template</field>
        <field name="arch" type="xml">
            <list string="Plantillas de Cap√≠tulos">
                <field name="name"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="active"/>
                <button name="action_apply_template" 
                        string="Cargar" 
                        type="object" 
                        icon="fa-download" 
                        class="btn-sm btn-success"
                        help="Cargar esta plantilla en el presupuesto"/>
            </list>
        </field>
    </record>
    
    <record id="view_chapter_template_form" model="ir.ui.view">
        <field name="name">sale.order.chapter.template.form</field>
        <field name="model">sale.order.chapter.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Cap√≠tulo">
                <header>
                    <button name="action_reload_template_view" 
                            string="Actualizar Vista" 
                            type="object" 
                            class="btn-info"
                            icon="fa-refresh"
                            help="Actualiza y recarga la vista para ver los cambios"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description" placeholder="Descripci√≥n de la plantilla..."/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <field name="template_line_ids">
                        <list editable="bottom" string="L√≠neas de la Plantilla" default_group_by="line_type">
                            <field name="line_type" string="Tipo de Secci√≥n"/>
                            <field name="is_fixed" string="L√≠nea Fija"/>
                            <field name="name" invisible="1"/>
                            <field name="product_id" invisible="is_fixed"/>
                            <field name="product_uom_qty" invisible="is_fixed"/>
                            <field name="product_uom" invisible="is_fixed"/>
                            <field name="price_unit" widget="monetary" invisible="is_fixed"/>
                            <field name="tax_ids" widget="many2many_tags" invisible="is_fixed"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acci√≥n para abrir plantillas de cap√≠tulos -->
    <record id="action_chapter_templates" model="ir.actions.act_window">
        <field name="name">Plantillas de Cap√≠tulos</field>
        <field name="res_model">sale.order.chapter.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva plantilla de cap√≠tulo
            </p>
            <p>
                Las plantillas de cap√≠tulos te permiten crear r√°pidamente cap√≠tulos con productos predefinidos.
            </p>
        </field>
    </record>

    <!-- Men√∫ para plantillas de cap√≠tulos -->
    <menuitem id="menu_chapter_templates"
              name="Plantillas de Cap√≠tulos"
              parent="sale.sale_menu_root"
              action="action_chapter_templates"
              sequence="20"/>

</odoo>
