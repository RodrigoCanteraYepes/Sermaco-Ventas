<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Las vistas de diálogo han sido eliminadas - funcionalidad integrada en el tab principal -->

    <!-- Vista de formulario para Sale Order Chapter Line -->
    <record id="view_sale_order_chapter_line_form" model="ir.ui.view">
        <field name="name">sale.order.chapter.line.form</field>
        <field name="model">sale.order.chapter.line</field>
        <field name="arch" type="xml">
            <form string="Línea del Capítulo">
                <header>
                    <button name="action_transfer_to_order_lines" 
                            string="Transferir a Líneas del Pedido" 
                            type="object" 
                            class="btn-primary"
                            help="Transfiere esta línea a las líneas del pedido de venta"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="line_type"/>
                            <field name="product_id"/>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="price_unit" column_invisible="line_type == 'alquiler'"/>
                            <field name="rental_period_type" column_invisible="line_type != 'alquiler'"/>
                             <field name="rental_periods" column_invisible="line_type != 'alquiler'"/>
                             <field name="price_per_period" column_invisible="line_type != 'alquiler'"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="price_subtotal" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Herencia de la vista de formulario de Sale Order -->
    <record id="view_order_form_inherit_chapters" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.chapters</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Añadir la nueva pestaña después de las líneas del pedido -->
            <xpath expr="//notebook" position="inside">
                <page string="Capítulos del Presupuesto" name="chapters">
                    <div class="o_sale_order_chapters">
                        <!-- Crear Nuevo Capítulo -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <group string="Crear Nuevo Capítulo">
                                    <field name="new_chapter_name" placeholder="Nombre del Capítulo" nolabel="1"/>
                                    <button name="action_create_chapter_inline" 
                                            string="Crear Capítulo" 
                                            type="object" 
                                            class="btn-primary"
                                            invisible="not new_chapter_name"/>
                                </group>
                            </div>
                            <div class="col-6">
                                <group string="Acciones">
                                    <button name="action_apply_multiple_templates" 
                                            string="Aplicar Plantillas" 
                                            type="object" 
                                            class="btn-info me-2"
                                            icon="fa-magic"
                                            groups="sales_team.group_sale_salesman"/>
                                    <button name="action_transfer_all_chapters_to_lines" 
                                            string="Transferir Todo a Líneas del Pedido" 
                                            type="object" 
                                            class="btn-warning"
                                            icon="fa-arrow-right"
                                            confirm="¿Está seguro de que desea transferir todas las líneas de capítulos a las líneas del pedido?"/>
                                </group>
                            </div>
                        </div>
                        
                        <!-- Lista de capítulos -->
                        <field name="chapter_ids" nolabel="1">
                            <list string="Capítulos" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name" string="Nombre de Producto"/>
                                <field name="description" string="Descripción"/>
                                <field name="chapter_type" string="Tipo"/>
                                <field name="is_collapsed" invisible="1"/>
                                <field name="total_amount" widget="monetary" sum="Total"/>
                                <field name="currency_id" invisible="1"/>
                                <button name="action_toggle_collapse" 
                                        string="Minimizar" 
                                        type="object" 
                                        icon="fa-minus" 
                                        class="btn-sm btn-secondary"
                                        invisible="is_collapsed"
                                        help="Oculta las líneas del capítulo para una vista más compacta"/>
                                <button name="action_toggle_collapse" 
                                        string="Expandir" 
                                        type="object" 
                                        icon="fa-plus" 
                                        class="btn-sm btn-secondary"
                                        invisible="not is_collapsed"
                                        help="Muestra las líneas del capítulo"/>


                            </list>
                            <form string="Capítulo">
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="description"/>
                                            <field name="chapter_type"/>
                                            <field name="sequence"/>
                                            <field name="is_collapsed"/>
                                        </group>
                                        <group>
                                            <field name="page_break_before"/>
                                            <field name="use_manual_total"/>
                                            <field name="manual_total" widget="monetary" invisible="not use_manual_total"/>
                                            <field name="total_amount" widget="monetary"/>
                                            <field name="currency_id" invisible="1"/>
                                        </group>
                                    </group>
                                    
                                    <notebook>
                                        <page string="Líneas del Capítulo" invisible="is_collapsed">
                                            <field name="chapter_line_ids">
                                                <list editable="bottom" default_group_by="line_type">
                                                    <field name="sequence" widget="handle"/>
                                                    <field name="line_type"/>
                                                    <field name="product_id"/>
                                                    <field name="name"/>
                                                    <field name="product_uom_qty"/>
                                                    <field name="product_uom"/>
                                                    <field name="price_unit" widget="monetary" column_invisible="line_type == 'alquiler'"/>
                                                    <field name="rental_period_type" column_invisible="line_type != 'alquiler'"/>
                                                     <field name="rental_periods" column_invisible="line_type != 'alquiler'"/>
                                                     <field name="price_per_period" widget="monetary" column_invisible="line_type != 'alquiler'"/>
                                                    <field name="tax_ids" widget="many2many_tags"/>
                                                    <field name="price_subtotal" widget="monetary" sum="Total"/>
                                                    <field name="currency_id" invisible="1"/>
                                                    <button name="action_transfer_to_order_lines" 
                                                            string="Transferir" 
                                                            type="object" 
                                                            icon="fa-arrow-right" 
                                                            class="btn-sm btn-warning"/>

                                                </list>
                                            </field>

                                        </page>
                                    </notebook>
                                </sheet>
                            </form>
                        </field>
                        
                        <!-- Resumen de totales -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="float-end">
                                    <strong>Total de Capítulos: 
                                        <field name="chapters_total" widget="monetary" nolabel="1"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Acción eliminada - funcionalidad integrada en el tab principal -->
    
    <!-- Vistas para Plantillas de Capítulos -->
    <record id="view_chapter_template_list" model="ir.ui.view">
        <field name="name">sale.order.chapter.template.list</field>
        <field name="model">sale.order.chapter.template</field>
        <field name="arch" type="xml">
            <list string="Plantillas de Capítulos">
                <field name="name"/>
                <field name="user_id"/>
                <field name="active"/>
                <button name="action_apply_template" 
                        string="Aplicar" 
                        type="object" 
                        icon="fa-plus" 
                        class="btn-sm btn-success"/>
            </list>
        </field>
    </record>
    
    <record id="view_chapter_template_form" model="ir.ui.view">
        <field name="name">sale.order.chapter.template.form</field>
        <field name="model">sale.order.chapter.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Capítulo">
                <header>
                    <button name="action_apply_template" 
                            string="Aplicar Plantilla" 
                            type="object" 
                            class="btn-primary"
                            groups="sales_team.group_sale_salesman"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Líneas de la Plantilla">
                            <field name="template_line_ids">
                                <list editable="bottom" string="Líneas de la Plantilla" default_group_by="line_type">
                                    <field name="sequence" widget="handle"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir plantillas de capítulos -->
    <record id="action_chapter_templates" model="ir.actions.act_window">
        <field name="name">Plantillas de Capítulos</field>
        <field name="res_model">sale.order.chapter.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva plantilla de capítulo
            </p>
            <p>
                Las plantillas de capítulos te permiten crear rápidamente capítulos con productos predefinidos.
            </p>
        </field>
    </record>

    <!-- Menú para plantillas de capítulos -->
    <menuitem id="menu_chapter_templates"
              name="Plantillas de Capítulos"
              parent="sale.sale_menu_root"
              action="action_chapter_templates"
              sequence="20"/>

</odoo>
