<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Las vistas de di√°logo han sido eliminadas - funcionalidad integrada en el tab principal -->

    <!-- Vista de formulario para Sale Order Chapter Line -->
    <record id="view_sale_order_chapter_line_form" model="ir.ui.view">
        <field name="name">sale.order.chapter.line.form</field>
        <field name="model">sale.order.chapter.line</field>
        <field name="arch" type="xml">
            <form string="L√≠nea del Cap√≠tulo">
                <header>
                    <button name="action_transfer_to_order_lines" 
                            string="Transferir a L√≠neas del Pedido" 
                            type="object" 
                            class="btn-primary"
                            help="Transfiere esta l√≠nea a las l√≠neas del pedido de venta"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="line_type"/>
                            <field name="product_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="price_unit" column_invisible="line_type == 'alquiler'"/>
                            <field name="rental_period_type" column_invisible="line_type != 'alquiler'"/>
                             <field name="rental_periods" column_invisible="line_type != 'alquiler'"/>
                             <field name="price_per_period" column_invisible="line_type != 'alquiler'"/>
                            <field name="tax_ids" widget="many2many_tags"/>
                            <field name="price_subtotal" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Herencia de la vista de formulario de Sale Order -->
    <record id="view_order_form_inherit_chapters" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.chapters</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Agregar campo descripci√≥n debajo del cliente -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="order_description" placeholder="Descripci√≥n adicional del presupuesto..."/>
            </xpath>
            
            <!-- Reemplazar la pesta√±a de l√≠neas del pedido con pesta√±as por cap√≠tulos -->
            <xpath expr="//page[@name='order_lines']" position="replace">
                <page string="Cap√≠tulos del Presupuesto" name="order_chapters">
                    <div class="row mb-3">
                        <div class="col-12">
                            <button name="action_load_template_to_order_lines" 
                                    string="Cargar Plantilla" 
                                    type="object" 
                                    class="btn-success me-2"
                                    icon="fa-download"
                                    help="Seleccionar y cargar una plantilla directamente en las l√≠neas del pedido"
                                    groups="sales_team.group_sale_salesman"/>
                        </div>
                    </div>
                    
                    <notebook>
                        <!-- Pesta√±a Alquiler -->
                        <page string="üèóÔ∏è Alquiler" name="alquiler_tab">
                            <field name="order_line" 
                                   context="{'default_line_type': 'alquiler', 'tree_view_ref': 'sale_order_chapters.view_order_line_tree_alquiler'}"
                                   domain="[('line_type', '=', 'alquiler')]">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="product_id" 
                                           domain="[('sale_ok', '=', True)]"
                                           context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                           force_save="1"/>
                                    <field name="name" optional="show"/>
                                    <field name="product_uom_qty" string="Cantidad"/>
                                    <field name="product_uom" string="Unidad" groups="uom.group_uom"/>
                                    <field name="price_unit" string="Precio Unit."/>
                                    <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                    <field name="price_subtotal" string="Subtotal"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="is_fixed" invisible="1"/>
                                    <field name="display_type" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Pesta√±a Montaje -->
                        <page string="üîß Montaje" name="montaje_tab">
                            <field name="order_line" 
                                   context="{'default_line_type': 'montaje', 'tree_view_ref': 'sale_order_chapters.view_order_line_tree_montaje'}"
                                   domain="[('line_type', '=', 'montaje')]">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="product_id" 
                                           domain="[('sale_ok', '=', True)]"
                                           context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                           force_save="1"/>
                                    <field name="name" optional="show"/>
                                    <field name="product_uom_qty" string="Cantidad"/>
                                    <field name="product_uom" string="Unidad" groups="uom.group_uom"/>
                                    <field name="price_unit" string="Precio Unit."/>
                                    <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                    <field name="price_subtotal" string="Subtotal"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="is_fixed" invisible="1"/>
                                    <field name="display_type" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Pesta√±a Portes -->
                        <page string="üöö Portes" name="portes_tab">
                            <field name="order_line" 
                                   context="{'default_line_type': 'portes', 'tree_view_ref': 'sale_order_chapters.view_order_line_tree_portes'}"
                                   domain="[('line_type', '=', 'portes')]">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="product_id" 
                                           domain="[('sale_ok', '=', True)]"
                                           context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                           force_save="1"/>
                                    <field name="name" optional="show"/>
                                    <field name="product_uom_qty" string="Cantidad"/>
                                    <field name="product_uom" string="Unidad" groups="uom.group_uom"/>
                                    <field name="price_unit" string="Precio Unit."/>
                                    <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                    <field name="price_subtotal" string="Subtotal"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="is_fixed" invisible="1"/>
                                    <field name="display_type" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Pesta√±a Otros Conceptos -->
                        <page string="üìã Otros Conceptos" name="otros_tab">
                            <field name="order_line" 
                                   context="{'default_line_type': 'otros', 'tree_view_ref': 'sale_order_chapters.view_order_line_tree_otros'}"
                                   domain="[('line_type', '=', 'otros')]">
                                <tree editable="bottom" create="true" delete="true">
                                    <field name="product_id" 
                                           domain="[('sale_ok', '=', True)]"
                                           context="{'partner_id': parent.partner_id, 'quantity': product_uom_qty, 'pricelist': parent.pricelist_id, 'uom':product_uom, 'company_id': parent.company_id}"
                                           force_save="1"/>
                                    <field name="name" optional="show"/>
                                    <field name="product_uom_qty" string="Cantidad"/>
                                    <field name="product_uom" string="Unidad" groups="uom.group_uom"/>
                                    <field name="price_unit" string="Precio Unit."/>
                                    <field name="tax_ids" widget="many2many_tags" optional="show"/>
                                    <field name="price_subtotal" string="Subtotal"/>
                                    <field name="line_type" invisible="1"/>
                                    <field name="is_fixed" invisible="1"/>
                                    <field name="display_type" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Pesta√±a Vista General (todas las l√≠neas) -->
                        <page string="üìä Vista General" name="general_tab">
                            <field name="order_line">
                                <tree editable="bottom" create="false" delete="false">
                                    <field name="line_type" string="Cap√≠tulo"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="name" readonly="1"/>
                                    <field name="product_uom_qty" string="Cantidad" readonly="1"/>
                                    <field name="product_uom" string="Unidad" groups="uom.group_uom" readonly="1"/>
                                    <field name="price_unit" string="Precio Unit." readonly="1"/>
                                    <field name="tax_ids" widget="many2many_tags" readonly="1"/>
                                    <field name="price_subtotal" string="Subtotal" readonly="1"/>
                                    <field name="is_fixed" invisible="1"/>
                                    <field name="display_type" invisible="1"/>
                                </tree>
                            </field>
                        </page>
