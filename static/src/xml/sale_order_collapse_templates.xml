<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <!-- Template para los controles de colapso de secciones -->
    <t t-name="sale_order_chapters.section_controls">
        <div class="section-controls mb-2">
            <button type="button" class="btn btn-sm btn-secondary me-2" id="collapse-all-sections">
                <i class="fa fa-minus-square"></i> Contraer Todo
            </button>
            <button type="button" class="btn btn-sm btn-success" id="expand-all-sections">
                <i class="fa fa-plus-square"></i> Expandir Todo
            </button>
        </div>
    </t>
    
    <!-- Template para el icono de colapso en cada sección -->
    <t t-name="sale_order_chapters.collapse_icon">
        <i class="fa fa-minus-square collapse-icon" 
           t-att-data-section-id="section_id"
           title="Hacer clic para contraer/expandir esta sección"></i>
    </t>
    
    <!-- Template para indicador de sección -->
    <t t-name="sale_order_chapters.section_indicator">
        <span class="section-indicator"></span>
    </t>
</templates>